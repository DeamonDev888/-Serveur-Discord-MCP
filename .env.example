# Token Discord du bot (obligatoire)
DISCORD_TOKEN=VOTRE_TOKEN_ICI
# Alternative (reconnue automatiquement)
DISCORD_BOT_TOKEN=VOTRE_TOKEN_ICI

# ID utilisateur admin (optionnel)
ADMIN_USER_ID=VOTRE_ID_DISCORD

# IDs Discord (optionnels)
DISCORD_CLIENT_ID=VOTRE_CLIENT_ID
DISCORD_GUILD_ID=VOTRE_GUILD_ID

# Configuration du bot
NODE_ENV=production

# Limites de fichiers (en octets)
MAX_FILE_SIZE_IMAGE=26214400
MAX_FILE_SIZE_VIDEO=104857600
MAX_FILE_SIZE_DEFAULT=8388608

# Configuration de la base de données (optionnel)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=discord_mcp
DB_USER=
DB_PASSWORD=

# Clé secrète pour les webhooks (si utilisé)
WEBHOOK_SECRET=

# Configuration Redis (optionnel, pour le cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Mode développement
NODE_ENV=development