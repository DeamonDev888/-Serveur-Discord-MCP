{
  "name": "discord-mcp-server",
  "version": "2.0.1",
  "description": "A comprehensive MCP server for Discord interaction with powerful tools and features",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "dev": "node dist/index.js",
    "start:bridge": "node scripts/start.js",
    "watch": "tsx watch src/index.ts",
    "check": "node -e \"require('./src/config.js').then(m=>console.log('✅ Configuration OK')).catch(e=>{console.error('❌ Configuration:',e.message);process.exit(1)})\"",
    "test": "node test_complet.js",
    "clean": "node -e \"const fs=require('fs');if(fs.existsSync('dist'))fs.rmSync('dist',{recursive:true});const files=fs.readdirSync('.').filter(f=>f.endsWith('.log'));files.forEach(f=>fs.unlinkSync(f));console.log('✅ Cleaned')\"",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prebuild": "npm run clean",
    "postbuild": "echo ✅ Build completed successfully",
    "mcp:test": "node dist/index.js"
  },
  "keywords": [
    "mcp",
    "discord",
    "discord.js",
    "fastmcp",
    "typescript",
    "bot",
    "chat",
    "automation",
    "model-context-protocol"
  ],
  "author": "Deamon",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "fastmcp": "^3.25.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  }
}
